        <Button x:Name="button1" Content="Click" HorizontalAlignment="Left" Margin="31,258,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="0,234,0,0" TextWrapping="Wrap" Text="When you getting money" VerticalAlignment="Top" Height="19" Width="160"/>
        <Button x:Name="button2" Content="Click" HorizontalAlignment="Left" Margin="385,258,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="347,234,0,0" TextWrapping="Wrap" Text="When you built like scarface" VerticalAlignment="Top" Width="160"/>

    </Grid>
</Window>
